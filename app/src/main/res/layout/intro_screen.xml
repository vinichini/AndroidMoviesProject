<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="horizontal"
    android:background="@color/background_intro">


    <TextView
        android:id="@+id/intro_screen_title"
        style="@style/TitleStyle"
        android:layout_centerInParent="true"
        android:text="MOVIES DB"
        />
    <TextView
    android:id="@+id/intro_screen_hide_text"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:layout_centerInParent="true"
    android:background="@color/background_intro"/>
    <ImageView
        android:id="@+id/intro_screen_tape"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/intro_screen_hide_text"
        android:layout_alignTop="@+id/intro_screen_title"
        android:layout_marginEnd="90dp"
        android:src="@mipmap/tape"
        />

</RelativeLayout>